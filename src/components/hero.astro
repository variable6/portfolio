---
import { Image } from 'astro:assets'

import Label from './ui/label.astro'

import profilePic from './../assets/img.avif'
import { app } from '../config'
---

<section class="flex flex-col items-center gap-y-7">
  <Image src={profilePic} alt="profile photo" class="h-24 w-auto rounded-full bg-[#FFBE98] p-2" loading="eager" />

  <div class="flex flex-col items-center gap-y-4">
    <h1 class="text-3xl font-medium">Pranay Kumar</h1>
    <div
      class="flex flex-row items-center gap-x-3 rounded-3xl border border-input px-4 py-2 mb-4 text-sm shadow-sm transition-all hover:shadow-md"
    >
      <p class="font-medium">Software Engineer</p>
    </div>
    <div class="flex flex-wrap justify-center gap-x-7 gap-y-3">
      <Label title="Email Me" as="a" href={app.links.email} target="_blank">
        <svg
          class="h-5 w-5 text-foreground/75"
          slot="icon"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <g id="style=bulk">
            <g id="email">
              <path
                id="vector (Stroke)"
                fill-rule="evenodd"
                clip-rule="evenodd"
                d="M2.86466 4.1379C3.92465 3.15363 5.38503 2.75 7 2.75H17C18.615 2.75 20.0754 3.15363 21.1353 4.1379C22.2054 5.13152 22.75 6.60705 22.75 8.5V15.5C22.75 17.393 22.2054 18.8685 21.1353 19.8621C20.0754 20.8464 18.615 21.25 17 21.25H7C5.38503 21.25 3.92465 20.8464 2.86466 19.8621C1.79462 18.8685 1.25 17.393 1.25 15.5V8.5C1.25 6.60705 1.79462 5.13152 2.86466 4.1379Z"
                fill="#BFBFBF"></path>
              <path
                id="vector (Stroke)_2"
                fill-rule="evenodd"
                clip-rule="evenodd"
                d="M19.3633 7.31026C19.6166 7.63802 19.5562 8.10904 19.2285 8.3623L13.6814 12.6486C12.691 13.4138 11.3089 13.4138 10.3185 12.6486L4.77144 8.3623C4.44367 8.10904 4.38328 7.63802 4.63655 7.31026C4.88982 6.98249 5.36083 6.9221 5.6886 7.17537L11.2356 11.4616C11.6858 11.8095 12.3141 11.8095 12.7642 11.4616L18.3113 7.17537C18.6391 6.9221 19.1101 6.98249 19.3633 7.31026Z"
                fill="#000000"></path>
            </g>
          </g>
        </svg>
      </Label>
      <Label title="GitHub" as="a" href={app.links.github} target="_blank">
        <svg class="h-5 w-5 text-foreground/75" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" slot="icon">
          <path
            d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"
