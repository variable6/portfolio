---
import { cn } from '../../utils'

const { as: Tag = 'div', class: className, href, target, heading, subheading, date } = Astro.props
---

<Tag
  class={cn(
    className,
    'relative rounded-2xl border border-border bg-primary-foreground/40 px-5 py-3',
    href && 'transition-all hover:border-foreground/25 hover:shadow-sm'
  )}
  href={href}
  target={target}
>
  <div class="flex flex-col gap-y-5">
    <div class="flex flex-col gap-y-0.5">
      <h1 class="text-lg font-medium">
        {heading}
        {subheading && <span class="ps-2 text-muted-foreground">|</span>}
        {subheading && <span class="ps-2 text-muted-foreground">{subheading}</span>}
      </h1>
      <h2 class="text-muted-foreground">{date}</h2>
    </div>
    <slot />
  </div>
</Tag>
