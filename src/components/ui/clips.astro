---
import Button from './button.astro'
const { title, links } = Astro.props
---

<div class="mt-3 flex flex-col gap-y-2 md:flex-row md:gap-x-5 md:gap-y-0">
  <h3 class="w-1/5 font-medium">{title}</h3>
  <div class="flex w-4/5 flex-row flex-wrap gap-x-2 gap-y-2">
    {
      links.map((link: { title: string; link: string }) => (
        <Button title={link.title} href={link.link} target="_blank" style="pill" />
      ))
    }
  </div>
</div>
